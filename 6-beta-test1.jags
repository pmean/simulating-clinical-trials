model {
  for (day in 1:T) {
    mu[day] <- step(day-delta1*T) * lambda
  }
  for (day in 1:t) {
    n[day] ~ dpois(mu[day]+0.001)
  }
  for (day in 1:(T-t)) {
    future_n[day] ~ dpois(mu[day+t])
  }
  Nstar <- sum(n)+sum(future_n)
  lambda ~ dgamma(N*S, T*S)
  delta1 ~ dbeta(N*S1*D1, N*S1*(1-D1))
}
